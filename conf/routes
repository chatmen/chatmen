# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /signin                     controllers.HomeController.signin
POST    /signin                     controllers.HomeController.commit
GET     /signup                     controllers.HomeController.sendForm
GET     /main-menu                  controllers.HomeController.mainMenu
GET     /complete                   controllers.HomeController.complete

GET     /tweet                      controllers.TweetController.gets(uid: Option[Long])
GET     /tweet/all                  controllers.TweetController.getAllTweet
GET     /tweet/text                 controllers.TweetController.getsTweetId(uid: Option[Long])
GET     /tweet/profile              controllers.TweetController.getsTweetId(uid: Option[Long])

GET    /tweet/posts                 controllers.TweetController.getAllTweet()
POST   /tweet/posts                 controllers.TweetController.add()

GET    /user/check                  controllers.UserController.checkUser()
#GET    /user/add                   controllers.UserController.commitUserInfo()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
